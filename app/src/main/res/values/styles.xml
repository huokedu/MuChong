<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--toolbar actionbar高度-->
        <item name="actionBarSize">44dp</item>
        <!-- toolBar 颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏 颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--整个当前Activity的字体的默认 颜色-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--CheckBox，RadioButton，SwitchCompat等控件的点击选中颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--整个当前Activity的窗口的默认 颜色-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarActionMenuTextAppearance</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!--ToolBar 标题字体配置-->
    <style name="ToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ToolbarTextSubAppearance" parent="ToolbarTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>
    <!--ToolBar 菜单字体配置-->
    <style name="ToolbarActionMenuTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabBackground">@drawable/bg_tab_selector</item>
        <item name="android:background">@mipmap/bg_tab_layout</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="ThirdChildTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textColorPrimary</item>
    </style>
    <style name="RatingBarLevel" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_indicator_level</item>
        <item name="android:indeterminateDrawable">@drawable/rating_indicator_level</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>
    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@mipmap/bg_button</item>
    </style>
    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:background">@color/divider_gray_color</item>
    </style>
    <style name="DividerVertical">
        <item name="android:layout_width">@dimen/divider_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_gray_color</item>
    </style>
    <style name="PtrFrameLayout">
        <item name="android:id">@id/rotate_header_list_view_frame</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="ptr_duration_to_close">200</item>
        <item name="ptr_duration_to_close_header">1000</item>
        <item name="ptr_keep_header_when_refresh">true</item>
        <item name="ptr_pull_to_fresh">false</item>
        <item name="ptr_ratio_of_header_height_to_refresh">1.2</item>
        <item name="ptr_resistance">1.7</item>
    </style>
    <style name="FirstHeaderLinear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="FirstHeaderLinearText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
    </style>
    <style name="DaoJiShiText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:background">@drawable/bg_timer_retangle_shape</item>
    </style>
    <style name="FirstQiangLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="FirstQiangImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/default_first_qiang</item>
    </style>
    <style name="FirstQiangLinearText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
    </style>
    <style name="FirstQiangLinearTextName" parent="FirstQiangLinearText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="FirstQiangLinearTextPrice" parent="FirstQiangLinearText">
        <item name="android:textColor">@color/text_color_red</item>
    </style>
    <style name="FirstQiangLinearTextDescription" parent="FirstQiangLinearText">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="FirstPaiLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="FirstPaiLinearText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
    </style>
    <style name="FirstPaiLinearTextName" parent="FirstPaiLinearText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="FirstPaiLinearTextPrice" parent="FirstPaiLinearText">
        <item name="android:textColor">@color/text_color_red</item>
    </style>
    <style name="ThirdChildOneImage" parent="FirstQiangImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="LoginRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/divider_retangle_shape</item>
    </style>
    <style name="LoginTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
        <item name="android:background">@null</item>
    </style>
    <style name="LoginTextView.EditText">

    </style>
</resources>
