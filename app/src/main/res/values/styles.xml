<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--toolbar actionbar高度-->
        <item name="actionBarSize">44dp</item>
        <!-- toolBar 颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏 颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--整个当前Activity的字体的默认 颜色-->
        <item name="android:textColorPrimary">@android:color/secondary_text_dark</item>
        <!--CheckBox，RadioButton，SwitchCompat等控件的点击选中颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--整个当前Activity的窗口的默认 颜色-->
        <item name="android:windowBackground">@color/bg_gray</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarActionMenuTextAppearance</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!--ToolBar 标题字体配置-->
    <style name="ToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarTextSubAppearance" parent="ToolbarTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>
    <!--ToolBar 菜单字体配置-->
    <style name="ToolbarActionMenuTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="SearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="layout">@layout/abc_search_view</item>
        <item name="queryBackground">@drawable/abc_textfield_search_material</item>
        <item name="submitBackground">@drawable/abc_textfield_search_material</item>
        <item name="closeIcon">@drawable/abc_ic_clear_mtrl_alpha</item>
        <item name="searchIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>
        <item name="searchHintIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>
        <item name="goIcon">@drawable/abc_ic_go_search_api_mtrl_alpha</item>
        <item name="voiceIcon">@drawable/abc_ic_voice_search_api_mtrl_alpha</item>
        <item name="commitIcon">@drawable/abc_ic_commit_search_api_mtrl_alpha</item>
        <item name="suggestionRowLayout">@layout/abc_search_dropdown_item_icons_2line</item>
    </style>


    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabBackground">@drawable/bg_tab_selector</item>
        <item name="android:background">@mipmap/bg_tab_layout</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ThirdChildTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textColorPrimary</item>
    </style>

    <style name="QiangTabLayoutStyle" parent="ThirdChildTabLayoutStyle">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ProductLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textColorPrimary</item>
    </style>

    <style name="RatingBarLevel" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_indicator_level</item>
        <item name="android:indeterminateDrawable">@drawable/rating_indicator_level</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@mipmap/bg_toolbar</item>
    </style>

    <!--<style name="DialogAppCompat" parent="@android:style/Theme.Dialog">-->
    <style name="DialogAppCompat" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@mipmap/bg_dialog</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--模糊-->
        <!--<item name="android:textAppearance">@style/DialogTextAppearance</item>-->
        <!--字体-->
    </style>

    <style name="DialogTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <!-- <item name="android:textColorHighlight">?textColorHighlight</item>
         <item name="android:textColorHint">?textColorHint</item>
         <item name="android:textColorLink">?textColorLink</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:background">@color/divider_gray_color</item>
    </style>

    <style name="DividerHorizontal.Thin">
        <item name="android:layout_height">@dimen/divider_width_thin</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">@dimen/divider_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_white_color</item>
    </style>

    <style name="NoDataImageView">
        <item name="android:layout_width">103.33dp</item>
        <item name="android:layout_height">106.33dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@mipmap/bg_no_data</item>
        <item name="android:id">@id/noDataView</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PtrFrameLayout">
        <item name="android:id">@id/rotate_header_list_view_frame</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="ptr_duration_to_close">200</item>
        <item name="ptr_duration_to_close_header">1000</item>
        <item name="ptr_keep_header_when_refresh">true</item>
        <item name="ptr_pull_to_fresh">false</item>
        <item name="ptr_ratio_of_header_height_to_refresh">1.2</item>
        <item name="ptr_resistance">1.7</item>
    </style>
    <!--四种类别Linear-->
    <style name="FirstHeaderLinear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--四种类别Text-->
    <style name="FirstHeaderLinearText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
    </style>
    <!--倒计时Text-->
    <style name="DaoJiShiText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:background">@drawable/bg_timer_retangle_shape</item>
    </style>
    <!--边距-->
    <style name="FirstBase">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <!--类别标题-->
    <style name="FirstTypeLinear" parent="FirstBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <!--还有更多-->
    <style name="FirstShowMore" parent="FirstBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:drawableRight">@mipmap/icon_first_add</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
        <item name="android:text">@string/first_header_more</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--抢购的一个商品Linear-->
    <style name="FirstQiangLinearItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">invisible</item>
    </style>
    <!--抢购商品图片-->
    <style name="FirstQiangImage">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:layout_width">112dp</item>-->
        <item name="android:layout_height">84dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@mipmap/default_first_qiang</item>
    </style>
    <!--抢购的一个商品文本Linear-->
    <style name="FirstQiangDescriptionLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/bg_gray</item>
    </style>
    <!--抢购商品名字-->
    <style name="FirstQiangLinearTextName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
    </style>
    <!--抢购商品价格-->
    <style name="FirstQiangLinearTextPrice" parent="FirstQiangLinearTextName">
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--竞拍的一个商品Relative-->
    <style name="FirstPaiRelativeItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">invisible</item>
    </style>
    <!--竞拍商品图片-->
    <style name="FirstPaiImage">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:layout_width">168.33dp</item>-->
        <item name="android:layout_height">126dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/default_first_pai</item>
    </style>
    <!--竞拍类型图片-->
    <style name="FirstPaiImageType">
        <item name="android:layout_width">32.5dp</item>
        <item name="android:layout_height">32.5dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <!--竞拍商品描述的Linear-->
    <style name="FirstPaiDescriptionLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <!--竞拍描述Text-->
    <style name="FirstPaiLinearText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
    </style>
    <!--竞拍描述名字-->
    <style name="FirstPaiLinearTextName" parent="FirstPaiLinearText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--竞拍描述价格-->
    <style name="FirstPaiLinearTextPrice" parent="FirstPaiLinearText">
        <item name="android:textColor">@color/text_color_red</item>
    </style>

    <style name="ThirdChildOneImage" parent="FirstQiangImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LoginRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/divider_retangle_shape</item>
    </style>

    <style name="LoginTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
        <item name="android:background">@null</item>
    </style>

    <style name="LoginTextView.EditText">
    </style>

    <style name="PaiDetailPriceLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="PaiDetailPriceTextView" parent="PaiDetailPriceLabelTextView">
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ShoppingCartButton" parent="Base.Widget.AppCompat.Button.Small">
        <item name="android:minHeight">30dip</item>
        <item name="android:minWidth">30dip</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_black_muchong</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="UserRelative">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="UserLinear" parent="UserRelative">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="PublishBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="PublishLinear" parent="PublishBase">
    </style>
    <style name="PublishLinearItem">
        <item name="android:paddingTop">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/publish_item_selector</item>
    </style>
    <style name="PublishTextItem">
        <item name="android:textColor">@color/text_color_black_muchong</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableRight">@drawable/publish_arrow_selector</item>
    </style>
    <style name="PublishRelativeItem">
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="PublishRelativeItemText">
        <item name="android:textColor">@color/text_color_black_muchong</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
    </style>
    <style name="PublishRelativeItemEdit">
        <item name="android:textColor">@color/text_color_black_muchong</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
    </style>



</resources>
