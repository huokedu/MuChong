<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_marginTop="@dimen/divider_width_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white"
                android:id="@+id/editName"
                android:textSize="14sp"
                android:singleLine="true"
                android:hint="@string/address_edit_name_hint"
                android:textColor="@color/text_color_black_muchong"
               />
            <EditText
                android:layout_marginTop="@dimen/divider_width_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white"
                android:id="@+id/editTel"
                android:textSize="14sp"
                android:singleLine="true"
                android:hint="@string/address_edit_tel_hint"
                android:textColor="@color/text_color_black_muchong"
               />
            <EditText
                android:layout_marginTop="@dimen/divider_width_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white"
                android:id="@+id/editAddress"
                android:hint="@string/address_edit_address_hint"
                android:textSize="14sp"
                android:textColor="@color/text_color_black_muchong"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
