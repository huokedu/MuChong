<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_retangle_shape"
            android:padding="@dimen/divider_width">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:scaleType="fitXY"
                android:src="@mipmap/default_first_jiao"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="菩提手链16珠活动"
                android:textColor="@color/text_color_black_muchong"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="剩余1天"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignBottom="@+id/linearLayout"
        android:background="@color/bg_color_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_fourth_three_over"
            android:layout_width="63dp"
            android:layout_height="63dp"/>
    </FrameLayout>
</RelativeLayout>