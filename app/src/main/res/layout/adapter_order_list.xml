<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="@android:color/white">
    <TextView
        android:textSize="15sp"
        android:id="@+id/textName"
        android:textColor="@color/text_color_black_muchong"
        android:text="@string/order_list_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/textStatus"
        android:textSize="14sp"
        android:textColor="@color/text_color_red"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/textName"
        android:id="@+id/textLabelPai"
        android:textSize="14sp"
        android:textColor="@color/text_color_black_muchong"
        android:text="@string/order_list_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textLabelPai"
        android:layout_alignBottom="@+id/textLabelPai"
        android:id="@+id/textPaiPrice"
        android:textSize="14sp"
        android:text="￥8899"
        android:textColor="@color/text_color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/textLabelPai"
        android:id="@+id/textLabelResult"
        android:textSize="14sp"
        android:textColor="@color/text_color_black_muchong"
        android:text="@string/order_list_order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textLabelResult"
        android:layout_alignBottom="@+id/textLabelResult"
        android:id="@+id/textResultPrice"
        android:textSize="14sp"
        android:text="￥8899"
        android:textColor="@color/text_color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/textLabelResult"
        android:id="@+id/textTime"
        android:textSize="14sp"
        android:text="2016-07-01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>