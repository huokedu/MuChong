<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.htlc.muchong.activity.MainActivity">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearAddress"
            android:minHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"></LinearLayout>
        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/listView"
            android:layout_below="@+id/linearAddress"
            android:layout_above="@+id/linearClearing"
            android:dividerHeight="3dp"
            android:divider="@color/bg_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <LinearLayout
            android:id="@+id/linearClearing"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/textTotalPriceLabel"
                android:layout_toRightOf="@+id/checkbox"
                android:text="@string/shopping_cart_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textTotalPrice"
                android:layout_toRightOf="@+id/textTotalPriceLabel"
                android:layout_alignBottom="@+id/textTotalPriceLabel"
                android:text="ï¿¥888"
                android:layout_weight="1"
                android:textColor="@color/text_color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:text="@string/shopping_cart_clearing"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
