<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.htlc.muchong.activity.MainActivity">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearAddress"
            android:minHeight="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textAddressTips"
                android:paddingLeft="30dp"
                android:drawableLeft="@mipmap/icon_create_order_add"
                android:drawablePadding="15dp"
                android:layout_width="wrap_content"
                android:text="@string/create_order_add_info"
                android:textColor="@color/text_color_black_muchong"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/relativeAddress"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textName"
                    android:text="崔丹凤"
                    android:textColor="@color/text_color_black_muchong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/textTel"
                    android:text="18812345678"
                    android:textColor="@color/text_color_black_muchong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/textName"
                    android:id="@+id/textAddress"
                    android:text="广州白云区太和镇大源北路30号林安物流城"
                    android:textColor="@color/text_color_black_muchong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_gravity="bottom"
            android:layout_below="@+id/linearAddress"
            android:background="@mipmap/icon_create_order_divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/listView"
            android:layout_below="@+id/linearAddress"
            android:layout_above="@+id/linearClearing"
            android:dividerHeight="3dp"
            android:divider="@color/bg_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <LinearLayout
            android:id="@+id/linearClearing"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white">
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/textTotalPriceLabel"
                android:layout_toRightOf="@+id/checkbox"
                android:text="@string/shopping_cart_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textTotalPrice"
                android:layout_toRightOf="@+id/textTotalPriceLabel"
                android:layout_alignBottom="@+id/textTotalPriceLabel"
                android:text="￥888"
                android:layout_weight="1"
                android:textColor="@color/text_color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:text="@string/shopping_cart_clearing"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
