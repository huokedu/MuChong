<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <TextView
        android:id="@+id/textLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_timer_label_retangle_shape"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="@string/first_header_start"
        android:textColor="@color/text_color_red"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/linearTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textHour"
            style="@style/DaoJiShiText"
            android:text="25"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text=":"
            android:textColor="@color/text_color_black_muchong"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textMinute"
            style="@style/DaoJiShiText"
            android:text="25"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text=":"
            android:textColor="@color/text_color_black_muchong"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textSecond"
            style="@style/DaoJiShiText"
            android:text="25"/>
    </LinearLayout>
</merge>