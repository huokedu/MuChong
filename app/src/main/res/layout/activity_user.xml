<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--头像-->
            <RelativeLayout
                android:id="@+id/relativeHead"
                style="@style/UserRelative">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_head"
                    android:textColor="@color/text_color_black_muchong"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imageHead"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/default_third_gird_head"/>
            </RelativeLayout>

            <LinearLayout
                style="@style/UserLinear"
                android:layout_marginTop="5dp">
                <!--昵称-->
                <RelativeLayout
                    android:id="@+id/relativeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/user_nick"
                        android:textColor="@color/text_color_black_muchong"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/imageArrow1"
                        android:text="哆啦A梦"
                        android:textColor="@color/text_color_black_muchong"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/imageArrow1"
                        android:layout_width="11dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_fourth_two_arrow"/>
                </RelativeLayout>
                <View
                    android:id="@+id/divider1"
                    style="@style/DividerHorizontal.Thin"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"/>
                <!--地区-->
                <RelativeLayout
                    android:id="@+id/relativeArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/user_area"
                        android:textColor="@color/text_color_black_muchong"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/textArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/imageArrow2"
                        android:text="北京 海淀"
                        android:textColor="@color/text_color_black_muchong"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/imageArrow2"
                        android:layout_width="11dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_fourth_two_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/UserLinear"
                android:layout_marginTop="5dp">
                <!--修改密码-->
                <RelativeLayout
                    android:id="@+id/relativePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/user_update_password"
                        android:textColor="@color/text_color_black_muchong"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/imageArrow3"
                        android:layout_width="11dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_fourth_two_arrow"/>
                </RelativeLayout>
                <View
                    android:id="@+id/divider2"
                    style="@style/DividerHorizontal.Thin"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"/>
                <!--更换手机-->
                <RelativeLayout
                    android:id="@+id/relativeTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/user_update_tel"
                        android:textColor="@color/text_color_black_muchong"
                        android:textSize="14sp"/>
                    <ImageView
                        android:id="@+id/imageArrow4"
                        android:layout_width="11dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_fourth_two_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <!--收货地址-->
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/relativeAddress"
                style="@style/UserRelative">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/user_address"
                    android:textColor="@color/text_color_black_muchong"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imageArrow5"
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_fourth_two_arrow"/>
            </RelativeLayout>
            <Button
                android:id="@+id/textButton"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="30dp"
                android:text="@string/user_save"
                style="@style/Button"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
