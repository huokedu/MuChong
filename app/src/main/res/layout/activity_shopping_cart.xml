<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.htlc.muchong.activity.MainActivity">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listView"
            android:choiceMode="multipleChoice"
            android:layout_above="@+id/relativeClearing"
            android:dividerHeight="3dp"
            android:divider="@color/bg_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/relativeClearing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_black_muchong"
                android:text="@string/select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/textTotalPriceLabel"
                android:layout_toRightOf="@+id/checkbox"
                android:text="@string/shopping_cart_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textTotalPrice"
                android:layout_toRightOf="@+id/textTotalPriceLabel"
                android:layout_alignBottom="@+id/textTotalPriceLabel"
                android:text="ï¿¥888"
                android:textColor="@color/text_color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textTotalNumber"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textTotalPriceLabel"
                android:layout_alignLeft="@+id/textTotalPriceLabel"
                android:text="@string/shopping_cart_total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/holo_orange_light"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:text="@string/shopping_cart_clearing"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
